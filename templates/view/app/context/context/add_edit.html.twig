{% extends 'layout/app/app.html.twig' %}

{% block title %}
	Dodaj kontekst
{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-0 col-md-6 d-none d-md-block ">
					<h1>{{ action}} kontekst</h1>
				</div>
				<div class="col-sm-12 col-md-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ url('app_index') }}">Home</a>
						</li>
						<li class="breadcrumb-item">
							<a href="{{ url('app_context_index') }}">Lista kontekstów użytkownika</a>
						</li>
						<li class="breadcrumb-item active">{{ action}} kontekst</li>
					</ol>
				</div>
			</div>
		</div>
	</section>

	<section class="content">
		<div class="row">
			<div class="col-sm-12 col-md-3"></div>
			<div class="col-sm-12 col-md-6">
				<div class="card card-primary card-outline">
					<div class="card-header">
						<h3 class="card-title">
							<i class="fas fa-plus"></i>
							{{ action}} kontekst
						</h3>
					</div>
					<div class="card-body pad table-responsive">
						{{ form_start(form) }}
						<div class="form-group">
							{{ form_label(form.name) }}
							{{ form_widget(form.name) }}
							{{ form_errors(form.name) }}
						</div>
						<div class="form-group">
							{{ form_label(form.description) }}
							{{ form_widget(form.description) }}
							{{ form_errors(form.description) }}
						</div>
						<div class="form-group">
							{{ form_label(form.icon) }}
							{{ form_widget(form.icon) }}
							{{ form_errors(form.icon) }}
						</div>
						{{ form_widget(form.submit) }}
						{{ form_end(form) }}
					</div>
				</div>
			</div>
			<div class="col-sm-12 col-md-3"></div>
		</div>
	</section>

{% endblock %}

{% block javascripts %}
	<script src="{{ asset('dep/AdminLTE/plugins/jquery-validation/jquery.validate.min.js') }}"></script>
	<script src="{{ asset('dep/AdminLTE/plugins/jquery-validation/additional-methods.min.js') }}"></script>
	<script src="{{ asset('dep/AdminLTE/plugins/jquery-validation/localization/messages_pl.min.js') }}"></script>
 	<script src="{{ asset('view/app/js/context/context/add_edit.js') }}"></script>
{% endblock %}
