{% extends 'layout/app/app.html.twig' %}

{% block title %}
	Dodaj użytkownika
{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

	<section class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h1>Dodaj użytkownika</h1>
				</div>
				<div class="col-sm-6">
					<ol class="breadcrumb float-sm-right">
						<li class="breadcrumb-item">
							<a href="{{ url('app_index') }}">Home</a>
						</li>
						<li class="breadcrumb-item">
							<a href="{{ url('user_index') }}">Lista użytkowników</a>
						</li>
						<li class="breadcrumb-item active">Dodaj użytkownika</li>
					</ol>
				</div>
			</div>
		</div>
	</section>

	<section class="content">
		<div class="row">
			<div class="col-3"></div>
			<div class="col-6">
				<div class="card card-primary card-outline">
					<div class="card-header">
						<h3 class="card-title">
							<i class="fas fa-plus"></i>
							Dodaj użytkownika
						</h3>
					</div>
					<div class="card-body pad table-responsive">
						{{ form_start(form) }}
						<div class="form-group">
							{{ form_label(form.email) }}
							{{ form_widget(form.email) }}
							{{ form_errors(form.email) }}
						</div>
						<div class="form-group">
							{{ form_label(form.roles) }}
							{{ form_widget(form.roles) }}
							{{ form_errors(form.roles) }}
						</div>
						{{ form_row(form.is_verified) }}
						{{ form_row(form.is_disabled) }}
						<div class="form-group">
							<div class="form-check">
								{{ form_widget(form.send_email) }}
								{{ form_label(form.send_email) }}
								{{ form_errors(form.send_email) }}
							</div>
						</div>
						{{ form_widget(form.submit) }}
						{{ form_end(form) }}
					</div>
				</div>
			</div>
			<div class="col-3"></div>
		</div>
	</section>

{% endblock %}

{% block javascripts %}
	<script src="{{ asset('dep/AdminLTE/plugins/jquery-validation/jquery.validate.min.js') }}"></script>
	<script src="{{ asset('dep/AdminLTE/plugins/jquery-validation/additional-methods.min.js') }}"></script>
	<script src="{{ asset('dep/AdminLTE/plugins/jquery-validation/localization/messages_pl.min.js') }}"></script>
	{# <script src="{{ asset('view/app/js/product/category/add_edit.js') }}"></script> #}
{% endblock %}
